<section id="three" class="wrapper style3 special">
    <div class="container">
        <header class="major">
            <h2>Editar Gasto</h2>
            <p></p>
        </header>
    </div>

    <div class="container 50%">

        <form action="/editarInsumo/{{insumo.url}}" method="post">
            <div class="campo">
                <div class="row uniform">
                    <div class="6u 12u$(small)">
                        <label for="total">Total</label>
                        <input name="total" placeholder="L. 2000" type="text" value="{{insumo.total}}">
                    </div>
                    <div class="6u$ 12u$(small)">
                        <label for="fecha">Fecha</label>
                        <input class="fecha" type="date" name="fecha" value="{{insumo.fecha}}">
                    </div>
                    <div class="12u$">

                        <input class="descripcion" name="descripcion" placeholder="Descripcion"
                            value="{{insumo.descripcion}}">



                    </div>
                </div>


                <div class="btn btn-azul">
                    <button type="submit">Editar</button>
                </div>
            </div>
        </form>
</section>