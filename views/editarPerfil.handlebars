<section id="three" class="wrapper style3 special">

    <div class="container 50%">

        <form action="/editarPerfil" method="post" enctype="multipart/form-data">
            <div class="campo">
                <div class="">
                    <label for="nombre">Nombre Usuario</label>
                    <input type="text" name="nombre" placeholder="Han Solo" value="{{usuario.nombre}}" required>
                </div>

                <div>
                    <label for="email">Correo Electrónico</label>
                    <input type="email" name="email" placeholder="nombre@dominio.com" value="{{usuario.email}}"
                        required>
                </div>

                <div>
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" placeholder="Escribe tu contraseña">
                </div>
                <div>
                    <label for="imagen">Imagen de perfil</label>
                    <input type="file" name="imagen">
                    <img src="/uploads/perfiles/{{usuario.imagen}}" class="perfil">

                </div>

                <div class="btn btn-azul">
                    <button id="btnGuardar" type="submit">Guardar Datos</button>
                </div>
            </div>
        </form>
</section>